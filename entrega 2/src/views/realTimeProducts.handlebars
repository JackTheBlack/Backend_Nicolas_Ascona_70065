<div>

      <h1>Lista de Productos en Tiempo Real</h1>
    <ul id="productsList">
        {{#each products}}
            <li style="margin-bottom:15px" >{{this.id}} - ${{this.price}}  <button style="margin-left:5px" class="deleteButton" value={{this.id}}>Eliminar </button></li> 
        {{/each}}
    </ul>

       <h2>Agregar Producto</h2>
   
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="description">Descripción:</label>
        <input type="text" id="description" name="description" required><br><br>

        <label for="code">Código:</label>
        <input type="text" id="code" name="code" required><br><br>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" required><br><br>

        <label for="status">Estado:</label>
        <input type="checkbox" id="status" name="status" checked><br><br>

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required><br><br>

        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required><br><br>

        <label for="thumbnails">Thumbnails (separados por comas):</label>
        <input type="text" id="thumbnails" name="thumbnails"><br><br>

        <button type="button"  id="addProductForm">Enviar</button>
    

    <h2>Eliminar Producto</h2>
  
    <form id="deleteProduct">

  
        <input type="number" id="productId" placeholder="ID del Producto" required>
        <button id="deleteBtn" type="submit">Eliminar</button>
      </form>



     
       
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>